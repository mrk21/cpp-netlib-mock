require 'fileutils'

task :default => :build

desc 'Build'
task :build => ['gen/cpp-netlib']

desc 'Distclean'
task :distclean do
  FileUtils.rm_rf 'gen'
end

directory 'gen/cpp-netlib' => 'cpp-netlib' do |t|
  FileUtils.mkdir_p t.name
  Dir.chdir t.name do
    sh "cmake ../../#{t.prerequisites.first}"
    sh 'make'
  end
end
